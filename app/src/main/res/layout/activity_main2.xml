<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/main2background"
    android:orientation="vertical"
    tools:context=".Main2">


    <Button
        android:id="@+id/addstuddentId"
        android:layout_width="345dp"
        android:layout_height="65dp"
        android:layout_margin="20dp"
        android:background="#8F2C0505"
        android:text="Add Student"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/viewstudentId"
        android:layout_margin="20dp"
        android:layout_width="345dp"
        android:layout_height="65dp"
        android:background="#8F2C0505"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:text="View Student " />

    <Button
        android:id="@+id/attendenceId"
        android:layout_width="345dp"
        android:layout_height="65dp"
        android:layout_margin="20dp"
        android:background="#8F2B0404"
        android:text="Attendence"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

</LinearLayout>